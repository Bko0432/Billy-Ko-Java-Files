# elif (else if)
if a > b:
 print("a is sexy")
elif a == b:
 print("both has girls")
else:
 print("b is sexy")

# for expression
for x in range (1,6) :
    print ('%d' % (x))

#Nested Loops 
for x in range(0, 4):
    print("")
    for y in range (0, x):
        print("x", end = " ",)
        
print("")
        
with open('hi.text') as f:
    for line in f :
        print(line)
        if line == "":
            print("", end = "",)
        elif(int(line) % 2 == 1):
            print("odd")
        else:
            print("even")


    